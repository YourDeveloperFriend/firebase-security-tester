{
  "rules": {
    ".write": false,
    "syncedValue": {
      ".read": true,
      ".write": true,
      ".validate": "newData.isString() && newData.val().length <= 100"
    },
    "messages": {
      ".read": false,
      "$message": {
        ".write": "!data.exists() || data.child('owner_id').val() === auth.uuid",
        ".validate": "newData.hasChildren(['text'])",
        "text": {
          ".validate": "newData.isString() && newData.val().length <= 1000"
        },
        "owner_id": {
          ".validate": "newData.val() === auth.uuid"
        },
        "$other": {
          ".validate": false
        }
      }
    },
    "users": {
      "$user": {
        ".read": "auth.uid === $user",
        ".write": "auth.uid === $user && (!newData.exists() || newData.hasChildren())",
        "name": {
          ".validate": "newData.isString() && newData.val().length <= 2000"
        },
        "email": {
          ".validate": "newData.isString() && newData.val().length <= 2000"
        },
        "$other": {
          ".validate": false
        }
      }
    }
  }
}
